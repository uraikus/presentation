{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/live/**",
        "destination": "live.html"
      },
      {
        "source": "/login**",
        "destination": "login.html"
      },
      {
        "source": "**",
        "destination": "index.html"
      }
    ]
  }
}
